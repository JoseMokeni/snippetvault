# Database
DATABASE_URL=postgresql://snippetvault:snippetvault@localhost:5432/snippetvault

# Authentication
# Generate a secure secret: openssl rand -base64 32
BETTER_AUTH_SECRET=your-secret-min-32-chars-generate-with-openssl-rand

# Frontend URL for OAuth redirects (development)
BETTER_AUTH_URL=http://localhost:5173

# GitHub OAuth (optional)
# Create OAuth app at: https://github.com/settings/developers
# Callback URL: http://localhost:5173/api/auth/callback/github
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Server Configuration
NODE_ENV=development
PORT=3000

# Test Database (for running tests)
TEST_DATABASE_URL=postgresql://snippetvault:snippetvault@localhost:5433/snippetvault_test
